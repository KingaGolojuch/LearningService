        <hr style="margin-top: 50px;" />
        <footer>
            <p>&copy; @DateTime.Now.Year - LearningService Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/jqueryval")*@
</body>
</html>

