@model IEnumerable<LearningService.WebApplication.Models.User.UserViewModel>

@{
    ViewBag.Title = "Index";
}
<style>
    tr, th, td {
        border-top: none !important;
        border-bottom: none !important;
    }
</style>
<h2>Użytkownicy</h2>

    <div class="row">
<div class="col-md-12">
        <table class="table table-row-collapse" style="border: none;">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Surname)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Active)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OrderBy(x => x.GetActiveAsString))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Surname) </td>
                        <td>@Html.DisplayFor(modelItem => item.Email) </td>
                        <td>@Html.DisplayFor(modelItem => item.GetActiveAsString) </td>
                        <td>@Html.ActionLink("Edytuj", "Edit", new { userId = item.Id })</td>
                        <td>
                            @if (item.Active)
                            {
                                @Html.ActionLink("Zablokuj", "Disable", new { userId = item.Id })
                            }
                            else
                            {
                                @Html.ActionLink("Odblokuj", "Enable", new { userId = item.Id })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>