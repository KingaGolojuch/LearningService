@model LearningService.WebApplication.Models.Lesson.LessonTheoryExamLearningViewModel
@{
    ViewBag.Title = "Zdawanie egzaminu teoretycznego";
}

<h2>@Model.Headline</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="form-horizontal">
        <hr />

        <div class="panel panel-default">
            <div class="panel-heading">Treść zadania</div>
            <div class="panel-body">@Html.Raw(Model.LessonContent)</div>
        </div>

        <div class="row" style="margin-top: 30px;">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(x => x.SelectedOption, null, new { @class = "text-danger" })
                <div class="panel panel-default">
                    <div class="panel-heading">Wybierz odpowiedź</div>
                    <div class="panel-body">
                        @foreach (var radioitem in Model.Options)
                        {
                            <p>
                                @Html.RadioButtonFor(model => model.SelectedOption, radioitem.Value, new { @id = radioitem.Value })
                                <label for="@radioitem.Value">@radioitem.Text</label>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="margin-top: 20px;">
            <div class="col-md-12">
                <input type="submit" value="Sprawdź" class="btn btn-primary" />
            </div>
        </div>
        </div>
    }
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
