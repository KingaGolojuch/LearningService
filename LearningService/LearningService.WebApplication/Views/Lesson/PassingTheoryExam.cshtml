@model LearningService.WebApplication.Models.Lesson.LessonTheoryExamLearningViewModel
@{
    ViewBag.Title = "Zdawanie egzaminu teoretycznego";
}

<h2>Zdawanie egzaminu teoretycznego</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>@Model.Headline</p>
        <p>@Html.Raw(Model.LessonContent)</p>

        @Html.ValidationMessageFor(x => x.SelectedOption, null, new { @class = "text-danger" })
        @foreach (var radioitem in Model.Options)
        {
            <div class="form-group">
                @radioitem.Text
                @Html.RadioButtonFor(model => model.SelectedOption, radioitem.Value)
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
