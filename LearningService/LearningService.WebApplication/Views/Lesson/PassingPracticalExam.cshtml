@model LearningService.WebApplication.Models.Lesson.LessonPracticalExamLearningViewModel
@{
    ViewBag.Title = "Zdawanie egzaminu praktycznego";
}

<h2>Zdawanie egzaminu praktycznego</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Headline)
    @Html.HiddenFor(x => x.LessonContent)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>@Model.Headline</p>
        <p>@Html.Raw(Model.LessonContent)</p>
        <div class="form-group">
            @Html.LabelFor(x => x.Code, new { @class = "col-md-2 control-label" })
            <div class="form-group">
                @Html.TextAreaFor(x => x.Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
