@model LearningService.WebApplication.Models.Article.ArticleBaseViewModel

@{
    ViewBag.Title = "Edytowanie artykułu";
}

<h2>Edytowanie artykułu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-input-full-width">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Headline, htmlAttributes: new { @class = "control-label " })
            @Html.EditorFor(model => model.Headline, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Headline, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContentShortened, htmlAttributes: new { @class = "control-label " })
            @Html.EditorFor(model => model.ContentShortened, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContentShortened, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContentArticle, htmlAttributes: new { @class = "control-label " })
            @Html.TextAreaFor(model => model.ContentArticle, new { @id = "editArticleArea", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ContentArticle, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Zapisz" class="btn btn-success" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-default" })
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        (function ($) {
            function HomeIndex() {
                var $this = this;

                function initialize() {
                    $('#editArticleArea').summernote({
                        focus: true,
                        height: 150,
                        tabSize: 4,
                        tabDisable: true,
                        codemirror: {
                            theme: 'united'
                        },
                        toolbar: [
                            ['style', ['bold', 'italic', 'underline', 'clear']],
                            ['font', ['superscript', 'subscript']],
                            ['color', ['color']],
                            ['style', ['style']],
                            ['table', ['table']],
                            ['para', ['ul', 'ol', 'paragraph']],
                            ['insert', ['link']]
                        ]
                    });
                }

                $this.init = function () {
                    initialize();
                }
            }
            $(function () {
                var self = new HomeIndex();
                self.init();
            })
        })(jQuery);
    </script>
}
