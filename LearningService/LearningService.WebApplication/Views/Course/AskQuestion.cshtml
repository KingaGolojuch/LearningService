@model LearningService.WebApplication.Models.Course.CourseMailViewModel
@{
    ViewBag.Title = "Zadaj pytanie użytkownikowi";
}

<h2>Zadaj pytanie użytkownikowi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CourseId)

    <div class="form-input-full-width">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.MailContent, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.MailContent, 6, 50, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MailContent, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Wyślij" class="btn btn-primary" />
        </div>
    </div>
}

@Html.ActionLink("Powrót", "CourseOverwiew", "Course", new { courseId = Model.CourseId}, new { @class = "btn btn-default", @style = "margin-top: 10px;" })
